<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div class="container" id="app">
        <div class="row justify-content-center align-items-center" style="height:100vh">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <form action="" autocomplete="off">
                            <div class="form-group">
                                <input type="text" class="form-control" name="username" v-mode="loginData.name">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" v-model="loginData.password">
                            </div>
                            <button type="button" id="sendlogin" class="btn btn-primary" v-on:click="loginCheck">login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    var app = new Vue({
        el: "#app",
        data: {
            loginData: {
                name: "",
                password:""
            }
        },
        methods: {
            loginCheck: function () {
                let self = this;
                axios.post("/Account/Login", self.loginData).then(function (res) {
                    if (res.data == 0) {
                        alert("登入成功");
                        window.location.href = "/Home/Index";
                    }
                    else {
                        alert("失敗");
                    }
                }).catch(function (err) {
                    console.log(err.data);
                })
            }
        }

    })
</script>